{
  "manifest_version": 3,
  "name": "E-univers alarm",
  "version": "1.2",
  "description": "Notifie l'utilisateur via Discord s'il se fait attaquer.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://e-univers.fr/*",
    "http://localhost:5000/*",
    "https://protanopic-tawnya-brazenly.ngrok-free.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://e-univers.fr/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
